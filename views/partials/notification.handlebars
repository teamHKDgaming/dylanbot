<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
<script>
	const successNotificationTitle = `{{lang.website_notification_success_title}}`
	const successNotificationMessage = `{{lang.website_notification_success_message}}`

	const errorNotificationTitle = `{{lang.website_notification_error_title}}`
	const errorNotificationMessage = `{{lang.website_notification_error_message}}`

	function notifySuccess() {
		$.notify({
			// options
			title: `<strong>${successNotificationTitle}</strong>`,
			message: `<strong>${successNotificationMessage}</strong>`
		}, {
			// settings
			element: 'body',
			position: null,
			type: "success",
			allow_dismiss: true,
			newest_on_top: false,
			showProgressbar: true,
			placement: {
				from: "top",
				align: "right"
			},
			offset: 10,
			spacing: 5,
			z_index: 1031,
			delay: 5000,
			timer: 1000,
			animate: {
				enter: 'animated bounceInRight',
				exit: 'animated bounceOutRight'
			},
			template: '<div data-notify="container" class="col-10 col-sm-3 alert alert-{0}" role="alert">' +
				'<button type="button" aria-hidden="true" class="close" data-notify="dismiss">×</button>' +
				'<span data-notify="icon"></span> ' +
				'<span data-notify="title">{1}</span> ' +
				'<span data-notify="message">{2}</span>' +
				'<div class="progress" data-notify="progressbar" style="height: 2px;">' +
				'<div class="progress-bar progress-bar-{0} progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%; background-color: #4caf50;"></div>' +
				'</div>' +
				'<a href="{3}" target="{4}" data-notify="url"></a>' +
				'</div>'
		});
	}

	function notifyError(message) {
		$.notify({
			// options
			title: `<strong>${errorNotificationTitle}</strong>`,
			message: `<strong>${errorNotificationMessage}</strong>`
		}, {
			// settings
			element: 'body',
			position: null,
			type: "danger",
			allow_dismiss: true,
			newest_on_top: false,
			showProgressbar: true,
			placement: {
				from: "top",
				align: "right"
			},
			offset: 10,
			spacing: 5,
			z_index: 1031,
			delay: 5000,
			timer: 1000,
			animate: {
				enter: 'animated bounceInRight',
				exit: 'animated bounceOutRight'
			},
			template: '<div data-notify="container" class="col-10 col-sm-3 alert alert-{0}" role="alert">' +
				'<button type="button" aria-hidden="true" class="close" data-notify="dismiss">×</button>' +
				'<span data-notify="icon"></span> ' +
				'<span data-notify="title">{1}</span> ' +
				'<span data-notify="message">{2}</span>' +
				'<div class="progress" data-notify="progressbar" style="height: 2px;">' +
				'<div class="progress-bar progress-bar-{0} progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%; background-color: #ef5350;"></div>' +
				'</div>' +
				'<a href="{3}" target="{4}" data-notify="url"></a>' +
				'</div>'
		});
	}
</script>